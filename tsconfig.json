{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es2015", "esnext", "dom"]
  },
  "include": ["src/**/*", "frontend/src/app/api", "frontend/src/app/auth", "frontend/src/middleware.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
